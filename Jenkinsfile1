node ('Ubuntu-app-agent') {
    def app
    stage('Git Clone')
    {
        checkout scm
    }
 
    stage('Build and Tag')
    {
        app = docker.build("amrit96/snake")
    }
 
    stage('Push-Dockerhub')
    {      
        docker.withRegistry('https://registry.hub.docker.com','dockerhub') {
              app.push("latest")
              }
    }
 
    stage('Pull docker image')
    {
       
       sh "docker-compose down"
       sh "docker-compose up -d" 
    }
}
